<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Inherit Partner Form View for Addresses -->
    <record id="view_partner_form_inherit_address" model="ir.ui.view">
        <field name="name">res.partner.form.inherit.address</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <notebook position="inside">
                <page string="Address Information" name="addresses">
                    <field name="address_ids" context="{'default_partner_id': id}"/>
                </page>
            </notebook>
        </field>
    </record>

    <!-- Address List View -->
    <record id="view_investor_address_list" model="ir.ui.view">
        <field name="name">investor.address.list</field>
        <field name="model">investor.address</field>
        <field name="type">list</field>
        <field name="arch" type="xml">
            <list>
                <field name="partner_id"/>
                <field name="investor_id"/>
                <field name="address_type" string="Loại địa chỉ"/>
                <field name="street" string="Số nhà và tên đường"/>
                <field name="state_id" string="Tỉnh/Thành"/>
                <field name="district" string="Quận/Huyện"/>
                <field name="ward" string="Phường/Xã"/>
                <field name="country_id" string="Quốc gia"/>
                <field name="zip" string="Mã bưu điện"/>
                <field name="is_default"/>
            </list>
        </field>
    </record>

    <!-- Address Form View -->
    <record id="view_investor_address_form" model="ir.ui.view">
        <field name="name">investor.address.form</field>
        <field name="model">investor.address</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="partner_id"/>
                            <field name="investor_id"/>
                            <field name="address_type" string="Loại địa chỉ" widget="selection" required="1" class="oe_required"/>
                            <field name="street" string="Số nhà và tên đường" placeholder="Nhập số nhà và tên đường" required="1" class="oe_required"/>
                            <field name="state_id" string="Tỉnh/Thành" required="1" class="oe_required"/>
                        </group>
                        <group>
                            <field name="district" string="Quận/Huyện" required="1" class="oe_required"/>
                            <field name="ward" string="Phường/Xã" required="1" class="oe_required"/>
                            <field name="country_id" string="Quốc gia" required="1" class="oe_required"/>
                            <field name="zip" string="Mã bưu điện"/>
                            <field name="is_default"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo> 