<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Personal Information Form View -->
    <record id="view_investor_personal_form" model="ir.ui.view">
        <field name="name">investor.profile.personal.form</field>
        <field name="model">investor.profile</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="Investor's personal information">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Full Name"/>
                        </h1>
                    </div>
                    <group>
                        <group string="Personal Information">
                            <field name="birth_date"/>
                            <field name="gender"/>
                            <field name="phone"/>
                            <field name="email"/>
                            <field name="nationality"/>
                        </group>
                    </group>
                    <group string="Upload ID Documents">
                        <group string="ID Mặt Trước">
                            <field name="id_front" widget="image" filename="id_front_filename"/>
                            <field name="id_front_filename" invisible="1"/>
                        </group>
                        <group string="ID Mặt Sau">
                            <field name="id_back" widget="image" filename="id_back_filename"/>
                            <field name="id_back_filename" invisible="1"/>
                        </group>
                        <group string="ID Card/CCCD/Stock trading code information">
                            <field name="id_type"/>
                            <field name="id_number"/>
                            <field name="id_issue_date"/>
                            <field name="id_issue_place"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Personal Information List View -->
    <record id="view_investor_personal_list" model="ir.ui.view">
        <field name="name">investor.profile.personal.list</field>
        <field name="model">investor.profile</field>
        <field name="type">list</field>
        <field name="arch" type="xml">
            <list string="Personal Information">
                <field name="name"/>
                <field name="birth_date"/>
                <field name="gender"/>
                <field name="nationality"/>
                <field name="phone"/>
                <field name="email"/>
                <field name="id_type"/>
                <field name="id_number"/>
            </list>
        </field>
    </record>
</odoo>
